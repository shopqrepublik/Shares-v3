# ---- API KEYS ----
ALPACA_API_KEY=your_alpaca_key
ALPACA_SECRET_KEY=your_alpaca_secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets

OPENAI_API_KEY=your_openai_key

# ---- DATABASE ----
# URL выдают в Railway в сервисе Postgres (в разделе Variables → DATABASE_URL)
# Формат примерно такой:
# postgresql://user:password@containers.railway.app:5432/railway
DATABASE_URL=postgresql+psycopg2://user:password@containers.railway.app:5432/railway

# ---- BENCHMARK ----
BENCHMARK=SPY

# ---- Guardrails (override defaults) ----
MAX_WEIGHT_STOCK=0.10
MAX_WEIGHT_ETF=0.20
MAX_WEIGHT_MICROCAP_TOTAL=0.20
MIN_PRICE=1.0
MIN_ADV_USD=1000000
CASH_BUFFER=0.05
MARKET_HOURS_ONLY=true
ALLOW_SHORTS=false

# Per-trade and per-ticker hard caps
MAX_ORDER_USD=5000
MAX_POSITION_USD=20000
